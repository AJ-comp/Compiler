<UserControl x:Class="ApplicationLayer.Views.WindowViews.OutputWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ApplicationLayer.Views.WindowViews"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Text="출력 보기 선택: " Margin="5 0 5 0"/>
            <ComboBox Width="300"/>
        </StackPanel>

        <TextBlock Text="{Binding OutputMessage}"/>
    </Grid>
</UserControl>
