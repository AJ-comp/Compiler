<Controls:MetroWindow 
        x:Class="WpfApp.MainWindow"
        xmlns:syntaxeditor="http://schemas.actiprosoftware.com/winfx/xaml/syntaxeditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        xmlns:wpfcontrols="clr-namespace:Parse.WpfControls;assembly=Parse.WpfControls"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:integration="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ShowTitleBar="True" ShowIconOnTitleBar="True"
        BorderBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1"
        GlowBrush="Black"
        ResizeMode="CanResizeWithGrip"
        WindowTransitionsEnabled="False"
        Loaded="MainWindow_Loaded">

    <Grid>
        <TabControl x:Name="tablControl">
            <TabItem Header="Editor">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <wpfcontrols:Editor Name="syntaxEditor"  Grid.Row="0"
                                        FontSize="15" 
                                        FontFamily="Arial"
                                        IsLineNumberingVisible="True"  LineNumberForeColor="DarkGreen"/>
                    <StatusBar Grid.Row="1">
                        <StatusBarItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Line="/>
                                <TextBlock Text="{Binding ElementName=syntaxEditor.TextArea, Path=LineIndex}"/>
                                <Border BorderThickness="5" BorderBrush="Transparent"/>
                                <TextBlock Text="CaretPosition="/>
                                <TextBlock Text="{Binding ElementName=syntaxEditor.TextArea, Path=StartCaretIndexByLine}"/>
                            </StackPanel>
                        </StatusBarItem>
                    </StatusBar>
                </Grid>
                <!--                <syntaxeditor:SyntaxEditor Name="editor" IsLineNumberMarginVisible="True" 
                                           IsOutliningMarginVisible="True"
                                           DocumentTextChanged="editor_DocumentTextChanged"/>-->
            </TabItem>
            <TabItem Header="Grammar">
                <Label x:Name="grammarLabel"/>
            </TabItem>
            <TabItem Header="Canonical Table">
                <RichTextBox x:Name="canonicalRTB" IsReadOnly="True"/>
            </TabItem>
            <TabItem Header="Parsing Table">
                <DockPanel>
                    <WindowsFormsHost x:Name="winformControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </DockPanel>
            </TabItem>
            <TabItem Header="Parsing History">
                <DataGrid x:Name="parsingHistory" AutoGenerateColumns="True" ItemsSource="{Binding}" IsReadOnly="True"/>
            </TabItem>
            <TabItem Header="Parse Tree" />
        </TabControl>

    </Grid>

</Controls:MetroWindow>
