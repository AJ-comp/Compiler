<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Wpf.UI.Basic.DarkTheme">

    <SolidColorBrush x:Key="ScrollViewerEnableBackgroundBrush" Color="#3e3e42" />
    <SolidColorBrush x:Key="ScrollViewerEnableForegroundBrush" Color="#686868" />

    <SolidColorBrush x:Key="VSBBackgroundBrush" Color="#3e3e42" />
    <SolidColorBrush x:Key="HSBBackgroundBrush" Color="#3e3e42" />
    
    <!--Control colors.-->
    <Color x:Key="ControlLightColor">#3e3e42</Color>
    <Color x:Key="ControlMediumColor">#3e3e42</Color>
    <Color x:Key="ControlDarkColor">#3e3e42</Color>

    <Color x:Key="ControlMouseOverColor">White</Color>
    <Color x:Key="ControlPressedColor">White</Color>


    <Color x:Key="ActiveArrowColor">#FF686868</Color>
    <Color x:Key="InActiveArrowColor">#555558</Color>

    <!--Border colors-->
    <Color x:Key="BorderLightColor">#FF686868</Color>
    <Color x:Key="BorderMediumColor">#FF686868</Color>
    <Color x:Key="BorderDarkColor">#FF686868</Color>

</ResourceDictionary>