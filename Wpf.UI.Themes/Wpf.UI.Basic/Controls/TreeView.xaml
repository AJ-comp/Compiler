<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Wpf.UI.Basic.Controls">

    <Style TargetType="TreeView">
        <Setter Property="Background" Value="{DynamicResource ActiveBackGroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ActiveTextBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ActiveBorderBrush}"/>
    </Style>

    <Style TargetType="TreeViewItem">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
</ResourceDictionary>