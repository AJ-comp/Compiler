<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Wpf.UI.BlueTheme">

    <!-- DockPane button style -->
    <Style x:Key="DockPaneButton" TargetType="{x:Type ButtonBase}" BasedOn="{StaticResource FlatButton}">
        <Setter Property="Background" Value="{DynamicResource DockPaneHoverBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="Transparent" />
    </Style>

</ResourceDictionary>