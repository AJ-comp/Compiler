<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ap="clr-namespace:Wpf.UI.Advance.Behaviors"
                    xmlns:local="clr-namespace:Wpf.UI.Advance.Themes">

    <Style x:Key="WindowCloseButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="MinWidth" Value="80"/>
        <Setter Property="Height"  Value="20"/>
        <Setter Property="Margin"  Value="0, 0, 10, 0"/>
        <Setter Property="ap:WindowCloseBehavior.EnableWindowClose" Value="True"/>
    </Style>

</ResourceDictionary>